<h1>Log In</h1>
<%= form_for(resource,
  as: resource_name, 
  url: session_path(resource_name)) do |f| %>

  <div class="login-container grid">
    <div class="email">
      <p>
        <%= f.label "Email:" %>
        <%= f.email_field :email, 
          autofocus: true,
          placeholder: "email",
          class: "form-field" %>
      </p>
      <p>
        <% if devise_mapping.rememberable? -%>
          <%= f.label :remember_me %>
          <%= f.check_box :remember_me %>
        <% end -%>
      </p>
    </div>

    <div class="password">

      <%= f.label "Password:" %>
      <%= f.password_field :password, 
        autocomplete: "off",
        class: 'form-field',
        placeholder: 'password' %>


    </div>
    <div class="button-box">
      <%= f.submit "Log in", class: 'button button-block login-button' %>
    </div>
    <div class="signup-link">
      <%= link_to 'Sign Up', '#'  %>
    </div>
    <div class="forgot-link">
      <%= link_to 'Forgot Password?', '#' %>
    </div>
  </div>
<% end %>
